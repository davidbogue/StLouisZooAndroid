<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity$PlaceholderFragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/scrollView"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/mapLinearLayout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#9933cc">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@android:drawable/ic_dialog_map"
                android:paddingTop="7dp"
                android:paddingLeft="15dp"
                android:onClick="showMap" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/map"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="#ffffff"
                android:onClick="showMap"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp" />

        </LinearLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/zoo_map_small"
            android:onClick="showMap"
            android:background="#FFFFFF"
            android:adjustViewBounds="false"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/mapLinearLayout" />

        <LinearLayout
            android:id="@+id/icon_row_1"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/imageButton"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:baselineAligned="false"
                android:background="#33B5E5"
                android:paddingTop="15dp"
                android:layout_marginRight="10dp"
                android:onClick="showAnimals"
                android:paddingBottom="17dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/elephant_2x" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Animals"
                    android:id="@+id/textView2"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:background="#99CC00"
                android:paddingTop="15dp"
                android:paddingBottom="17dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:onClick="showAttractions">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/tickets_2x" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Attractions"
                    android:id="@+id/textView2"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/icon_row_2"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/icon_row_1"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:baselineAligned="false"
                android:background="#FF8800"
                android:paddingTop="15dp"
                android:layout_marginRight="10dp"
                android:onClick="showHours"
                android:paddingBottom="17dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/clock_2x" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/hours"
                    android:id="@+id/textView2"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:background="#FF4444"
                android:paddingTop="15dp"
                android:paddingBottom="17dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:onClick="showInfo">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/info" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="About"
                    android:id="@+id/textView2"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>


