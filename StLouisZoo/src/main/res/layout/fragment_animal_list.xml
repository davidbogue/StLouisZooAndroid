<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AnimalList$PlaceholderFragment"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/linearLayoutAnimalType"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#99CC00"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageViewAnimalType"
            android:src="@drawable/frog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/amphibians"
            android:id="@+id/textViewAnimalType"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textColor="#ffffff" />
    </LinearLayout>



        <ListView
            android:id="@+id/animalListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />



</LinearLayout>